<!DOCTYPE html>
<html>
  <head>
    <title>Tahod:o:</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <body>
  <%= render :partial => 'shared/flash', :flash => flash %>
  <%= render "shared/navigation" %>
  <% if user_signed_in? %>
    <% @supervisor = Supervisor.find_by(user_id: current_user.id, team_id: current_user.team_id) %>
    <div class="container-fluid row">
      <div class="col-sm-0 col-md-2 col-xl-2">
        <%= render "shared/sidebar" %>
      </div>
      <div class="col-sm-12 col-md-10 col-xl-10">
        <div class="container-fluid margin-xl">
          <%= yield %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="margin-mid">
    </div>
    <%= yield %>
  <% end %>
  </body>
</html>
